class Solution {
public:
    bool isPowerOfTwo(int n) {
       int x=0;
        if(n==0){
        return false;
        }
        for( int i=0 ;i <=n;i++){
            if(pow(2,i)==n){
            x=1;
            }
        }if(x==1)
        return true;
        else
        return false;
      
    }
};
